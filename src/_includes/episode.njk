---
layout: 'base.njk'
---

<div class="container">
    <div class="episode-header">
        <div class="episode-header__meta">
            <span class="episode-header__date">{{ date | postDate }} | {{ duration }}</span>
            <h1 class="episode-header__title">{{ title }}</h1>
            <p class="episode-header__host">Hosted by {{ host }}</p>
            <p class="episode-header__number">Episode #{{ episodeNumber }}</p>
            <ul class="episode-header__tags">
                {% for tag in tags %}
                    {% if tag != 'podcast' and tag != 'featured' %}
                        <li>{{ tag }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="episode-header__media">
            <figure class="episode-header__image">
                <img src="{{ image }}" alt="{{ imageAlt }}"></figure>
                <div class="episode-header__audio">
                    <audio controls>
                        <source src="{{ audioFile }}" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    </div>
                </div>
            </div>
            <div class="episode-content">
                <p class="episode-content__description">{{ description }}</p>
                {{ content | safe }}
            </div>
        </div>