              <div class="podcast-icons">
                <h3>Tune In</h3>
                <i class="bi bi-apple" title="Apple Podcasts"></i>
                <i class="bi bi-spotify" title="Spotify"></i>
              </div>
            </div>
          </section>
          <section class="bg-background-secondary-300">
            <div class="featured-episode">
              <div class="margin-block-3">
                <h2>Check out these trending episodes to get started.</h2>
                {%- for episode in collections.episode -%}
                  <div class="episode-list {% if loop.last %} episode-list--last{% endif %}">
                    <span>{{ episode.data.episodeNumber }}</span>
                    <h3>{{ episode.data.title }}</h3>
                    <a href="{{ episode.url }}">
                      <svg
                        fill="#66806b"
                        height="50px"
                        width="50px"
                        version="1.1"
                        id="Layer_1"
                        xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        viewbox="0 0 512 512"
